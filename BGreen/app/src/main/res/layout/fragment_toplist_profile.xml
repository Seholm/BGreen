<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#93ff27">

        <TextView
            android:id="@+id/toplist_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="#"
            android:textSize="35sp"
            android:layout_marginTop="15dp"
            android:textColor="#010101"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/common_ic_googleplayservices"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toplist_person_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:layout_marginLeft="10sp"

            app:border_width="4dp"
            app:border_color="#FF000000"
            />

        <TextView
            android:id="@+id/toplist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Herman CarlstrÃ¶m"
            android:textSize="25sp"
            android:maxLines="1"
            android:layout_marginLeft="3dp"
            android:textColor="#010101" />

        <TextView
            android:id="@+id/toplist_meter_traveled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10 000"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="25sp"
            android:textColor="#010101"
            />

        <TextView
            android:id="@+id/toplist_meter_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textSize="25sp"
            android:layout_marginRight="5dp"
            android:textColor="#010101"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>